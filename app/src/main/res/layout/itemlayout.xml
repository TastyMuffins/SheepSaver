<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Domain.com"
        android:id="@+id/domainText"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username: Paul"
        android:id="@+id/usernameText"
        android:layout_below="@+id/domainText"
        android:layout_alignLeft="@+id/domainText"
        android:layout_alignStart="@+id/domainText" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordSecurityBar"
        android:layout_below="@+id/usernameText"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@+id/usernameText"
        android:layout_alignStart="@+id/usernameText"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password Secure"
        android:id="@+id/passwordSaftyText"
        android:layout_above="@+id/passwordSecurityBar"
        android:layout_alignRight="@+id/passwordSecurityBar"
        android:layout_alignEnd="@+id/passwordSecurityBar" />
</RelativeLayout>